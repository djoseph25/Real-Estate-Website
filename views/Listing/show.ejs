      <!-- MAIN BODY START -->

      <main>
        <div class="row">
          <div class="col-lg-9">
      <div class="card" >
         <h5 class="card-title ">Property Description</h5>
         <p class="card-text p-3 mb-2 bg-light"><%= listing.description %></p>
         <h5 class="card-title home">Basic Home Details</h5>
         <h5 class="card-text p-3 ">The Basics</h5>
         <ol class="s">
           <li class="card-text basic-info">Bedroom:</li>
           <li class="card-text basic-info">Full Baths:</li>
           <li class="card-text basic-info">Garare:</li>
           <li class="card-text basic-info">Year Built:</li>
           <li class="card-text basic-info">Square Footage:</li>
           <li class="card-text basic-info">Bedroom:</li>
         </ol>
         <!-- MAP -->
         <h5 class="card-title ">Location Map</h5>
        <div class='map'>
         <img src="https://images.unsplash.com/photo-1526778548025-fa2f459cd5c1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1333&q=80" alt="" class="map">
        </div>
        
         <!-- MAP END -->
         
          </div>
          </div>
     <!-- SIDE CARD -->
          <div class="col-lg-3">
         <div class="card location">
           <h5 class="card-title ">Genereal Information</h5>
           <h6 class='card-text p-3 font-weight-bold'> <%= listing.location.toLowerCase() %> </h6>
           <h6 class='card-text p-3 font-weight-bold'>$<%= listing.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");%>. </h6>
           <h6 class='card-text p-3 status'><span class='pr-3'><%=listing.bedroom %> Beds</span> <span class='pr-3'><%=listing.bathroom %> Baths </span> <span><%=listing.area.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");%>sqf </span></h6>
           <h6 class='card-text p-3'>Listing Status: For <%= listing.status %> </h6>
         </div>
         <!-- Share this Home Icon -->
         <h6 class='card-text pt-2 font-weight-normal'>Share this Home</h6>
         <div class='icon-border pl-1'>
           <span class='facebook'><a href=""><i class="fab fa-facebook-square fa-lg"></i></a></span>
           <span class='twitter'><a href=""><i class="fab fa-twitter-square fa-lg"></i></a></span>
           <span class='instagram'><a href=""><i class="fab fa-instagram-square fa-lg"></i></a></span>
         </div>
     
         <!-- CONTACT SELLER -->
         
         <div class="card mt-4 contact-seller">
           <h5 class="card-title">Contact Seller</h5>
           <div class="row justify-content-center">
             <div class="col-11">
                 <div class="form-area">  
                     <form action='/blog' method='POST' class='form'>
                                 <div class="form-group pt-4">
                                     <input type="text" class="form-control" id="title" name="title" placeholder="Name" required>
                                 </div>
                                 <div class="form-group pt-1">
                                   <input type="text" class="form-control" id="title" name="title" placeholder="Email" required>
                               </div>
                               <div class="form-group pt-1">
                                 <input type="text" class="form-control" id="title" name="title" placeholder="Phone" required>
                             </div>
                                 <div class="form-group">
                                 <textarea class="form-control" type="textarea" id="body" name='body' placeholder="Ask A Question" maxlength="120" rows="7"></textarea>
                                    
                                   </div>
                                  <p class="protected">
                                    This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.</p>
                     <input type='button' class='btn btn-info sendmessage' value='Send Message'></input>
                     </form>
                     <footer class="blockquote-footer">Listed by <cite title="Source Title"><%= listing.user.username %> </cite></footer>  
                 </div>
             </div>
         </div>
         </div>
         <!-- CONTACT END -->
          </div>
        </div>
